@{
  Layout = "_Layout";
}

@using PierreTreat.Models;
@model IEnumerable<PierreTreat.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId})</li>
    }
  </ul>
}
else
{
  <h3>No treats have been added.</h3>
} 

<p>@Html.ActionLink("Add new treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>